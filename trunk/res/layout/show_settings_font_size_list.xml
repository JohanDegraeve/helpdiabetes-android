<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linearLayoutVerticalWithPadding" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_menu_back" />

        <TextView
            android:id="@+id/textView1"
            style="@style/defaultFontTitle"
            android:text="@string/pref_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        style="@style/defaultFontNormal"
        android:text="@string/selected_wanted_size" />

    <ListView
        android:id="@+android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:cacheColorHint="#00000000" >
    </ListView>

</LinearLayout>